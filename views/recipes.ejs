<%- include('partials/header') %>

<div class="container mt-5">
    <h2>All Recipes</h2>
    <div class="row">
        <% recipes.forEach(recipe => { %>
            <div class="col-md-4">
                <div class="card mb-3">
                    <img src="<%= recipe.image || 'https://via.placeholder.com/150' %>" class="card-img-top" alt="Recipe Image">
                    <div class="card-body">
                        <h5 class="card-title"><%= recipe.title %></h5>
                        <p class="card-text">Ingredients: <%= recipe.ingredients.join(', ') %></p>
                        <a href="/recipe/<%= recipe._id %>" class="btn btn-info">View Recipe</a>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<%- include('partials/footer') %>
